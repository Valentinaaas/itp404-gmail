
<style>
  form {
    margin-left: 250px;
    margin-top: 100px;
  }
</style>


<form onsubmit={{action "createEmail"}}>

  <div>
    <label for="from">From</label>
    {{input type="text" id="from" value=from}}
  </div>

  <div>
    <label for="to">To</label>
    {{input type="text" id="to" value=to}}
  </div>

  <div>
    <label for="subject">Subject</label>
    {{input type="text" id="subject" value=subject}}
  </div>

  <div>
    <label for="message">Message:</label><br>
    {{textarea form="container" id="message" rows="8" cols="80" value=message}}
  </div>

  <br><br>
  <button type="submit" data-test="send">Send</button>
</form>

{{outlet}}
